<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/root_element"
    android:layout_height="match_parent"
    android:background="@drawable/night">

    <RelativeLayout
        android:id="@+id/for_anim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.75"

        >
        <TextView
            android:id="@+id/so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Что ж, начнем!"
            android:gravity="center"
            android:textSize="21sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/White"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/GreyForStrokeOfEd"
            android:background="@drawable/design_for_entrance"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="Еmail"
            android:drawableStart="@drawable/mail_icon"
            android:paddingHorizontal="10dp"
            android:drawablePadding="10dp"
            />


        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/GreyForStrokeOfEd"
            android:background="@drawable/design_for_entrance"
            android:layout_below="@+id/email"
            android:maxLines="1"
            android:inputType="text"
            android:singleLine="true"
            android:hint="Имя"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:paddingHorizontal="10dp"
            android:drawablePadding="10dp"
            />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/form"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/GreyForStrokeOfEd"
            android:background="@drawable/design_for_entrance"
            android:layout_below="@+id/name"
            android:maxLines="1"
            android:drawableStart="@drawable/form_icon"
            android:hint="Класс"
            android:singleLine="true"
            android:digits="0123456789."
            android:drawablePadding="10dp"
            android:paddingHorizontal="10dp"
            />

        </RelativeLayout>
        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/design_for_entrance"
            android:text="Далее"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"

            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        android:transitionName="@string/trans"
        />


</androidx.constraintlayout.widget.ConstraintLayout>